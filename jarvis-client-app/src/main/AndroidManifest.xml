<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ai.picovoice.android">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:showOnLockScreen="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="ch.mathieubroillet.jarvis.android.ListeningActivity"
            android:exported="true"
            android:label="@string/title_activity_listening"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar" />

        <service
            android:name="ch.mathieubroillet.jarvis.android.PorcupineService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name="ch.mathieubroillet.jarvis.android.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>